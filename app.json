{
  "name": "saucerbot",
  "scripts": {
    "postdeploy": "python manage.py pr create",
    "pr-predestroy": "python manage.py pr destroy"
  },
  "env": {
    "HEROKU_APP_NAME": {
      "required": true
    },
    "GROUPME_API_KEY": {
      "required": true
    },
    "GROUPME_GROUP_ID": {
      "required": true
    }
  },
  "formation": {},
  "addons": [
    "bonsai",
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}